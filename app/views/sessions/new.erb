<div class='cont'>
  <h2>Log in</h2>
  <%=  form_tag '/login' do %>
    <div class="field">
      <%= label_tag :email%><br>
      <%= text_field_tag :email%><br>
    </div>
    <div class="field">
      <%= label_tag :password%><br>
      <%= password_field_tag :password%><br>
    </div>
    <div class="actions ">
      <%= submit_tag 'Log in', class: "btn btn-success" %>
    </div>
  <%end%>
</div>