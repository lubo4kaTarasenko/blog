<div class='cont show_post'>
  <p id="notice"><%= notice %></p>

  <div>
    <h4>Title:</h4>
    <p><%= @post.title %></p>
  </div>
  <div>
    <img src='<%= @post.image %>' width='200px'/>
  </div>
  <div>
    <h4>Description:</h4>
    <p><%= @post.name %></p>
  </div>
  <div>
    <h4>Content:</h4>
    <p><%= @post.content %></p>
  </div>
  <div>
    <h4>Author:</h4>
    <p><%= @post.author.full_name %></p>
  </div>

  <br/>
  <div class='btn btn-primary'><%= link_to 'Edit', edit_post_path(@post) %></div> 
  <div class='btn btn-primary'><%= link_to 'Back', posts_path %></div>
</div>
<div class='cont add_comment'>
  <h4>New Comment</h4>
  <%= render 'comment_form' %>
</div>
<div class='cont add_comment_list'>
  <h4>Comments</h4>
  <%= render 'comments_list' %>
</div>
