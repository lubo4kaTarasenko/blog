<% comment ||= @post.comments.build%>
<div class='comment_form'>
  <%= form_with model: [ @post, comment ], local: false  do |form| %>
    <div class="field">
      <%= form.text_area :body, class: 'form-control', rows: "3"%>
    </div>
    <%= form.hidden_field :parent_id, value: parent_comment&.id %>
    <div class="actions " >
      <%= form.submit nil, class: "btn btn-success"%>
    </div>
  <% end %>
</div>