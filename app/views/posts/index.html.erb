<div class='cont ow_x'>
  <p id="notice"><%= notice %></p>

  <h2>Posts</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><h4>Title</h4></th>
        <th class='none' scope="col"><h4>Description</h4></th>
        <th class='none' scope="col"><h4>Content</h4></th>
        <th class='none' scope="col"><h4>Image</h4></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>          
          <td><p><%= post.title %></p></td>
          <td class='none'><p><%= post.name %></p></td>
          <td class='none'><p><%= post.content %></p></td>
          <td class='none'><img src='<%= post.image %>' width='100px'></td>
          <td><div class='btn btn-primary'><%= link_to 'Show', post %></div></td>
          <td><div class='btn btn-warning'><%= link_to 'Edit', edit_post_path(post) %></div></td>
          <td><div class='btn btn-danger'><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
